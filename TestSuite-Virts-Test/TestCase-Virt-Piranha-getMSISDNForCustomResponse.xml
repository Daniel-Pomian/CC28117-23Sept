  <con:testStep type="groovy" name="Groovy Script-CreateMSISDN" id="99c1d6de-478c-4b77-b998-cfbab88db3a1">
    <con:settings/>
    <con:config>
      <script>/*
 * This script generate msisdn for custom response from piranha mock
 * Date: 04.08.2016
 * Autor: Michael Gordon
*/
 String sPiranhaPrefix = context.expand( '${#Project#MOCK-Prefix-Piranha-StackService-CustomResponse}' ) 
 String sPiranhaMiddle='321'
 String sSASCode = context.expand( '${#TestCase#outSASCode}' )
 String sBrandID = context.expand( '${#TestCase#inBrandID}' )
 String sNoBrand = context.expand( '${#TestCase#inBoolNoBrand}' )
 // first set error message in msisdn variable
 String sMSISDN =testRunner.testCase.name+': Can not generate msisdn. Wrong ' 

 // check input parameters
 if (sSASCode==null || sSASCode=='' || sSASCode.length()!=5){
 	testRunner.testCase.setPropertyValue( "outMSISDN", sMSISDN+ 'SASCode for tenant and brand' )
 	return
 }
  if (sBrandID==null ||sBrandID=='' || sBrandID.length()&lt;1 || sBrandID.length()>2 ){
 	testRunner.testCase.setPropertyValue( "outMSISDN", sMSISDN+ 'brandID. Must be 1-2 signs' )
 	return	
 }

 // format values
 sSASCode=sSASCode.substring(2) 
 if (sBrandID.length()==1) { sBrandID='0'+sBrandID}
 // log.info(sSASCode + '=Sascode - brandid='+sBrandID)

 // set generated msisdn
 if (sNoBrand=='true')
 	sMSISDN=sPiranhaPrefix+sPiranhaMiddle+sSASCode 
 else
 	sMSISDN=sPiranhaPrefix+sPiranhaMiddle+sSASCode+sBrandID
 // set in properties
 testRunner.testCase.setPropertyValue( "outMSISDN", sMSISDN)
 testRunner.testCase.setPropertyValue( "outMSISDNLength", sMSISDN.length().toString())</script>
