  <con:testStep type="groovy" name="Groovy Script-CalculateAmount*Count" id="c8cded3f-2b48-4a84-a867-87362e3b67f2">
    <con:settings/>
    <con:config>
      <script>/*
 * This script multiplied amount with count and return result in money format.
 * Date: 28.06.2016
 * Autor: Michael Gordon
*/

 import java.text.DecimalFormat
 import java.text.DecimalFormatSymbols;
 // set format for money 
 def moneyform = new DecimalFormat("#####0.00", new DecimalFormatSymbols(Locale.US))
 
 // get input values
 def iAmount = context.expand( '${#TestCase#inAmount}' ).toInteger() 
 def iCount = context.expand( '${#TestCase#inCount}' ).toInteger() 
  // set convertet value to test-case properties	
 testRunner.testCase.setPropertyValue('outTotalAmount',moneyform.format(iAmount*iCount/100))</script>
